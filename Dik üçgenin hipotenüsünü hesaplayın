package javaapplicationbeginner;
import java.util.Scanner;
public class JavaApplicationbeginner {
 /*
   Dik üçgenin hipotenüsünü hesaplayın.
   Javada karekök alırken Math.sqrt() kullanılır.
*/
public static void main(String[] args) {
    
      Scanner scanner = new Scanner(System.in);
      
      System.out.print("yatay kenar uzunlugunu giriniz :");
      int kenar1 = scanner.nextInt();

      System.out.print("dikey kenar uzunlugunu giriniz : ");
      int kenar2 = scanner.nextInt();
      
      double hipotenus = Math.sqrt((kenar1*kenar1) + (kenar2*kenar2 ));
      
      System.out.println("uzunuluk : " + hipotenus);
 
      
    }
    
}
